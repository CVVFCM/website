{
	{$CADDY_GLOBAL_OPTIONS}

	skip_install_trust

	frankenphp {
		{$FRANKENPHP_CONFIG}

		worker {
			file ./public/index.php
			env APP_RUNTIME Runtime\FrankenPhpSymfony\Runtime
			{$FRANKENPHP_WORKER_CONFIG}
		}
	}
}

{$CADDY_EXTRA_CONFIG}

(common) {
	log {
		{$CADDY_SERVER_LOG_OPTIONS}

		format console
	}

	reverse_proxy /stream/* rtsp-to-web:8083

	root /app/public
	encode zstd br gzip

	@phpRoute {
		not file {path}
		not path /stream/*
	}
	rewrite @phpRoute index.php

	@frontController path index.php
	php @frontController

	file_server {
		hide *.php
	}
}

php:80, localhost:80 {
	import common
}

{$SERVER_NAME:localhost} {
	{$CADDY_SERVER_EXTRA_DIRECTIVES}

	import common
}
